{
  "name": "bingx-trading-bot-server",
  "version": "1.0.0",
  "description": "Backend server for BingX Trading Bot",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "migrate": "node dist/migrations/production-migrate.js",
    "migrate:force": "node dist/migrations/production-migrate.js --force",
    "migrate:render": "node dist/migrations/render-deploy-migrate.js",
    "verify:deployment": "node dist/scripts/verify-deployment.js",
    "postbuild": "npm run migrate:build",
    "migrate:build": "node -e \"console.log('Migration will run on first server start')\"",
    "render-build": "npm install && npm run build",
    "render-start": "npm run migrate:render; npm run start",
    "deploy:render": "npm run render-build && npm run render-start"
  },
  "dependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/node": "^20.10.4",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.11.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "sequelize": "^6.35.1",
    "sqlite3": "^5.1.7",
    "typescript": "^5.3.3",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2"
  }
}
